@model IEnumerable<MellonBank.Models.User>
@{
    ViewData["Title"] = "Employee Page";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <title>Your Page Title</title>
</head>
<body>
<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FisrtName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FisrtName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a asp-action="CreateBankAccount" asp-controller="Employee" asp-route-afm="@item.Afm">Add bank account</a> |
                        <a asp-action="Edit" asp-route-afm="@item.Afm">Edit</a> |
                        <a asp-action="Details" asp-route-afm="@item.Afm">Details</a> |
                        <a asp-action="Delete" asp-route-afm="@item.Afm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


    <a asp-action="Create" class="btn btn-primary">Create Custromer</a>
</div>
</body>