@model MellonBank.ViewModels.CreateCustomerViewModel;
@{
	ViewData["Title"] = "Create customer Page";
}

<h1>@ViewData["Title"]</h1>
<div class="form-group">
		<section>
			<form id="account" method="post">
				<h2>Create a new customer, give the elements.</h2>
				<hr />
				<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
				<div class="form-floating mb-3">
					<input asp-for="FisrtName" class="form-control" autocomplete="FisrtName" aria-required="true" placeholder="Name" />
					<label asp-for="FisrtName" class="form-label">Name</label>
					<span asp-validation-for="FisrtName" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="LastName" class="form-control" aria-required="true" placeholder="Lastname" />
					<label asp-for="LastName" class="form-label">LastName</label>
					<span asp-validation-for="LastName" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="Address" class="form-control" aria-required="true" placeholder="Address" />
					<label asp-for="Address" class="form-label">Address</label>
					<span asp-validation-for="Address" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="PhoneNumber" class="form-control" aria-required="true" placeholder="PhoneNumber" />
					<label asp-for="PhoneNumber" class="form-label">PhoneNumber</label>
					<span asp-validation-for="PhoneNumber" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="Email" class="form-control" aria-required="true" placeholder="Email" />
					<label asp-for="Email" class="form-label">Email</label>
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="Afm" class="form-control" aria-required="true" placeholder="Afm" />
					<label asp-for="Afm" class="form-label">Afm</label>
					<span asp-validation-for="Afm" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="UserName" class="form-control" aria-required="true" placeholder="UserName" />
					<label asp-for="UserName" class="form-label">UserName</label>
					<span asp-validation-for="UserName" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="Password" class="form-control" aria-required="true" placeholder="Password" />
					<label asp-for="Password" class="form-label">Password</label>
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="ConfirmPassword" class="form-control" aria-required="true" placeholder="ConfirmPassword" />
					<label asp-for="ConfirmPassword" class="form-label">ConfirmPassword</label>
					<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
				</div>
				<div>
					<button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Submit</button>
				</div>
			</form>
		</section>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}